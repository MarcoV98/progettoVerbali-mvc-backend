@model List<ViolazioneVM>

<h2>Violazioni con Punti</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Verbale</th>
            <th>Data Violazione</th>
            <th>Indirizzo Violazione</th>
            <th>Nominativo Agente</th>
            <th>Data Trascrizione Verbale</th>
            <th>Importo</th>
            <th>Decurtamento Punti</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Descrizione Tipo Violazione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDVerbale</td>
                <td>@item.DataViolazione</td>
                <td>@item.IndirizzoViolazione</td>
                <td>@item.NominativoAgente</td>
                <td>@item.DataTrascrizioneVerbale</td>
                <td>@item.Importo</td>
                <td>@item.DecurtamentoPunti</td>
                <td>@item.DescrizioneTipoViolazione</td>
            </tr>
        }
    </tbody>
</table>
