@model List<Anagrafica>

<h1>Anagrafiche</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID Anagrafica</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Operazioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anagrafica in Model)
        {
            <tr>
                <td>@anagrafica.IDAnagrafica</td>
                <td>@anagrafica.Cognome</td>
                <td>@anagrafica.Nome</td>
                <td>@anagrafica.Indirizzo</td>
                <td>@anagrafica.Città</td>
                <td>@anagrafica.CAP</td>
                <td>@anagrafica.Cod_Fisc</td>
                <td>
                    <a asp-controller="Anagrafica" asp-action="Details" asp-route-id="@anagrafica.IDAnagrafica">Dettagli</a> |
                    <a asp-controller="Anagrafica" asp-action="Edit" asp-route-id="@anagrafica.IDAnagrafica">Modifica</a> |
                    <a asp-controller="Anagrafica" asp-action="Delete" asp-route-id="@anagrafica.IDAnagrafica">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Nuova Anagrafica</a>
</div>

@if (TempData["Message"] != null)
{
    <div style="color: red;">@TempData["Message"]</div>
}

<div>
    <h2>Link alle Statistiche</h2>
    <ul>
        <li><a asp-controller="Statistiche" asp-action="TotaleVerbali">Totale Verbali</a></li>
        <li><a asp-controller="Statatistiche" asp-action="TotalePunti">Totale Punti</a></li>
        <li><a asp-controller="Statistiche" asp-action="ViolazioniPunti">Violazioni con Punti</a></li>
        <li><a asp-controller="Statistiche" asp-action="ViolazioniImporto">Violazioni con Importo</a></li>
    </ul>
</div>



